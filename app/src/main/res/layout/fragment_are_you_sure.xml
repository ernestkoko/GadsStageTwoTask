<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="200sp"
        android:minHeight="@android:dimen/notification_large_icon_height"
        app:cardCornerRadius="22dp"
        tools:context=".screens.are_you_sure.AreYouSureFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/twelve_dp_dimen"
            android:layout_marginRight="@dimen/twelve_dp_dimen"
            android:layout_marginBottom="50dp">


            <ImageView
                android:id="@+id/close_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/seven_dp"
                android:layout_marginEnd="@dimen/twelve_dp_dimen"
                android:layout_marginRight="@dimen/twelve_dp_dimen"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/are_ure_sure_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/close_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/fifty_dp"
                android:text="@string/are_you_sure"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/are_ure_sure_text"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_question_mark" />

            <TextView
                android:id="@+id/yes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/are_ure_sure_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/custom_yes"
                android:text="@string/yes"
                android:textColor="@color/yellow"

                android:textSize="@dimen/twenty_sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</layout>