<?xml version="1.0" encoding="utf-8"?>
<layout >
    <data>

    </data>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

  >

        <ImageView
            android:id="@+id/not_success_image"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:src="@drawable/ic_bad"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fifty_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_below="@id/not_success_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submission_not_successful"
            android:textSize="@dimen/twenty_sp"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/seven_dp"
            android:layout_marginEnd="@dimen/seven_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/twenty_dp"
            android:layout_marginTop="@dimen/thirty_dp"
           />





</LinearLayout>
</layout>